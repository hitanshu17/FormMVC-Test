<style>
    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
    }

    th, td {
        text-align: left;
        padding: 16px;
    }

    tr:nth-child(even) {
        background-color: #F8F8F8;
    }
</style>


<div class="content-wrapper">


    <div class="page-content fade-in-up">

        <a href="/Home/Create" class="btn btn-danger"> Add Record</a>
        <br /><br />
        <div class="ibox">
            <div class="ibox-head btn-primary">
                <div class="ibox-title" style="color:white;text-align:center">
                    Form Details
                </div>
            </div>

            <table id="Grower" class="table" cellspacing="0" width="100%">
                <thead class="btn-primary">
                    <tr style="text-align:center;">
                        @*<th>ID</th>*@
                        <th>Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Mobile</th>
                        <th>Country</th>
                        <th>State</th>
                        <th>City</th>
                        <th>Course</th>
                        <th>Entered Via </th>
                        @*<th>Action</th>*@
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr style="text-align:center">
                        @*<td>@Html.DisplayFor(modelItem => item.id)</td>*@
                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                        <td>@Html.DisplayFor(modelItem => item.email)</td>
                        <td>@Html.DisplayFor(modelItem => item.address)</td>
                        <td>@Html.DisplayFor(modelItem => item.mobile)</td>
                        <td>
                            @if (item.country == "0")
                            {
                                <p>India</p>
                            }
                            @if (item.country == "1")
                            {
                                <p>Australia</p>
                            }
                            else
                            {
                                <p>France</p>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.state)</td>
                        <td>@Html.DisplayFor(modelItem => item.city)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.coursesView)
                            @*@if (item.coursesView == "0")
                            {
                                <p>BTECH</p>
                            }
                            @if (item.coursesView == "1")
                            {
                                <p>BCA</p>
                            }
                            @if (item.coursesView == "2")
                            {
                                <p>BCOM</p>
                            }
                            @if (item.coursesView == "3")
                            {
                                <p>BBA</p>
                            }
                            @if (item.coursesView == "4")
                            {
                                <p>LLB</p>
                            }
                            else
                            {
                                <p>NA</p>
                            }*@
                        </td>
                        <td>
                            @if (item.enter_by == "0")
                            {
                                <p>CRM</p>
                            }
                            else
                            {
                                <p>Website</p>
                            }
                        </td>

                        @*<td>
                            <a onclick="del(modelItem => item.id)" data-toggle="modal"><i class="glyphicon glyphicon-trash" data-toggle="tooltip" title="Delete"></i> </a>
                        </td>*@

                    </tr>
                }
            </table>
        </div>
    </div>
</div>


